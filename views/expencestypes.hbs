<h1>{{title}}</h1>

<form>
    <table class="table">
        <tr><th>Тип расхода</th><th></th></tr>
        {{#each types}}
            <tr>
                <td>{{this.Type}}</td>
                <td><button formaction="/expences/types/delete{{this.idExpencesTypes}}">Удалить</button><button formaction="/expences/types/{{this.idExpencesTypes}}">Редактировать</button></td>
            </tr>
        {{/each}}
        <tr>
            <td><input id="Type" class="field" placeholder="Тип расхода"></td>
            <td><button formaction="javascript: newType()">Создать</button></td>
        </tr>
    </table>
</form>

<script type="text/javascript">
    function newType() {
        let type = document.getElementById('Type');
        document.location.href = `/expences/types/create?type=${type.value}`;
    }
</script>