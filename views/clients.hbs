<h1>{{title}}</h1>
<p><a href="/clients/clientcard"><button>Добавить клиента</button></a></p>

<form action = "/clients/clientsFilter" method="POST">
    <input type="text" name="filterSurname" placeholder="Введите фамилию"/>
    <input type="submit" value="Поиск по фамилии"/>
    <a href="/clients"><input type="button" value="Сброс фильтра"/></a>
</form><br>

<table class="table">
    <tr><th>ФИО</th><th>Номер телефона</th><th>VK</th><th>Insta</th><th>Info</th></tr>
    {{#each clients}}
        <tr>
            <td><a href="/clients/{{this.id}}">{{this.surname}} {{this.name}}</a></td>
            <td>{{this.cellphone}}</td>
            <td><a href="{{this.vk}}" target="_blank">{{this.vk}}</a></td>
            <td>{{this.insta}}</td>
            <td>{{this.info}}</td>
        </tr>
    {{/each}}
</table>